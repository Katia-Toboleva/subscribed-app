{
  "extends": ["eslint:recommended"],
  "plugins": ["prettier"],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "preserve",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "no-bitwise": 0
    },
    "overrides": [{
      "files": "*",
      "rules": {
        "react-native/no-inline-styles": 0
      }
    }],
    "ignorePatterns": ["node_modules", "expo", "dist", "webpack.config.js"]
}
